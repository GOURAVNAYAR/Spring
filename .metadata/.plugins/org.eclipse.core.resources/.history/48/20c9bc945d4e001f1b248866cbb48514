	<bean
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean"   	    <!--  3).........LoadSessionFactory..............................  -->
		name="factory">

		<property name="dataSource" ref="ds"></property>    						<!-- 3.1)................DATA SOURCE.............................. -->
		<property name="hibernateProperties">               						<!-- 3.2)................Hibernate properties..................... -->
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
	</bean>

	<bean class="org.springframework.orm.hibernate5.HibernateTemplate"               <!--  2)........HivernateTamplate ko sessionFactory mil jaye ga..-->
		name="hibernateTemplate">
		<property name="sessionFactory" ref="factory"></property>
	</bean>
																		             <!--  1)........ProductDao ko HibernateTemplate mil gaya.........-->
	<bean class="com.springorm.EmployeeDao" name="employeeDao">
		<property name="HibernateTemplate" ref="hibernateTemplate"></property>

	</bean>

